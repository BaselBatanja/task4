.container
    display flex
    flex-direction row
    width 100%
    // background-color green
    height 100%
    padding-right 80px
    padding-left 80px
    box-sizing border-box
    .logo
        // background-color red
        display flex
        align-items center
        padding-right 50px
        div
            writing-mode: vertical-lr
            position relative
            transform rotate(180deg)
            text-align center
            font-size 30px
            font-family sans-serif
            font-weight bold
    .values
        // background-color blue
        display flex
        flex-direction column-reverse
        padding-bottom 50px
        
        span
            height 80px
            // background-color salmon
            text-align center
            font-family sans-serif
    .showChartBarsDiv
        width 100%
        // background-color purple
        padding-left 20px
        padding-top 20px
        padding-right 20px
        padding-bottom 50px
        display flex
        align-items flex-end
        .chart
            // background-color brown
            width 100%
            height 400px
            border-bottom 1px solid #ccc
            border-left 1px solid #ccc
            display flex
            flex-direction row
            justify-content space-evenly
            align-items flex-end
            position relative
            padding-top 20px



