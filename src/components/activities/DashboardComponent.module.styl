.header
    // background-color red
    font-family sans-serif
    .topic
        text-align center
        font-size 25px
        padding-top 20px
    .selectContainer
        display flex
        justify-content flex-end
        padding-right 30px
        select
            width 10rem
            height 2rem
            text-align center
            outline none
            border-radius 5px
            option 
                font-size 16px
                
footer
    position relative
    // background-color red
    height 3rem
    span
        position absolute
        left 50%
        top 50%
        transform translate(-50%,-50%)
        font-family sans-serif
        font-weight bold
        font-size 30px
.termOfChart
    display flex
    justify-content flex-end
    padding-right 30px
    padding-top 20px
    .value
        min-width 10rem
        height 3rem
        background-color white
        border-radius 5px
        border 1px solid #ccc
        div
            height 50%
            display flex
            align-items center
            justify-content center